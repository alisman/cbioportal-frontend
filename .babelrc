{
    "presets": ["@babel/preset-env", "@babel/preset-react"],
    "plugins": ["@babel/plugin-transform-modules-commonjs"],
    "env": {
        "development": {
            "presets": ["@babel/preset-env"]
        },
        "production": {
            "presets": []
        },
        "test": {
            "presets": [],
            "compact": false,
            "plugins": [
                [
                    "rewire",
                    {
                        "exclude": ["**/*.spec.js"]
                    }
                ],
                [
                    "@babel/plugin-transform-module-commonjs", {
                        "allowTopLevelThis": true
                    }
                ]
            ]
        }
    }
}
