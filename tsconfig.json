{
    "compilerOptions": {
        "outDir": "./tsDist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "useDefineForClassFields": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "checkJs": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib":["es2015", "es2016.array.include", "dom"]
    },
    "exclude": ["./node_modules/*"],
    "include": [
        "./typings/**/*",
        "./src/**/*"
    ],
    "compileOnSave": false
}
